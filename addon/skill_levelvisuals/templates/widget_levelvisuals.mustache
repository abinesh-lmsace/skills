{{!

    @template skilladdon_skill_levelvisuals/widget_levelvisuals

    This template renders the top navbar.

    Example context (json):
    {

    }
}}
{{#data.levelnoresult}}
{{#noresult}}{{{noresult}}}{{/noresult}}
{{/data.levelnoresult}}

{{^data.levelnoresult}}
<div class="skill-level-visuals">
    <div class="skill-levels-wrapper">
        {{#data.showcurrentlevel}}
        {{#data.completed}}
        <div class="current-level-section">
            <div class="current-level-content">
                <div class="level-image current-level-img">
                    <img src="{{image}}" alt="{{name}} - image" role="presentation" class="responsive-img">
                </div>
                <span class="current-level-name"> {{{name}}} </span>
            </div>
        </div>
        {{/data.completed}}
        {{/data.showcurrentlevel}}

        <div class="skill-levels">
            {{^data.showcurrentlevel}}
            {{#data.completed}}
            <div class="current-level-text title-only">
                <label for="current-level-name"> {{#str}} yourcurrentlevel, block_dash {{/str}} </label>
                <span class="current-level-name"> {{{data.completed.name}}} </span>
            </div>
            {{/data.completed}}
            {{/data.showcurrentlevel}}

            <div class="level-items">
            {{#data.levels}}
                <div class="level-item">
                    <div class="level-image {{#completed}} completed {{/completed}}" data-toggle="tooltip" data-title="{{name}}">
                        <img src="{{image}}" alt="{{name}} - image" role="presentation" class="responsive-img">
                    </div>

                    <span class="level-name"> {{{name}}} </span>

                    {{#currentlevel}}
                    <span class="current-level"><i class="fa fa-caret-up"></i></span>
                    {{/currentlevel}}
                </div>
            {{/data.levels}}
            </div>
        </div>
    </div>
</div>
{{/data.levelnoresult}}
